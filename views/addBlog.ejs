<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Add-Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container">
        <h1 class="text-center mt-4">Add Blog</h1>
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="title">CoverImage</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" required>
            </div>
            <div class="form-group mb-3">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group mb-3">
                <label for="title">Body</label>
                <textarea class="form-control" name="body" id="body" style="height: 100px"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
